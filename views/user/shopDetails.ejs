<script>
    // Get the current date and time
    var now = new Date().getTime();

    // Set the initial countdown duration (in milliseconds) to 2 days
    var initialCountdownDuration = 1 * 3 * 60 * 60 * 1000;

    // Calculate the countdown date by adding the initial duration to the current time
    var countdownDate = now + initialCountdownDuration;

    // Function to update the countdown
    function updateCountdown() {
        // Get the current date and time
        var now = new Date().getTime();

        // Calculate the time remaining
        var timeRemaining = countdownDate - now;

        // If the countdown is over, set a new countdown for 2 days in the past
        if (timeRemaining <= 0) {
            countdownDate = now - initialCountdownDuration;
            timeRemaining = countdownDate - now;
        }

        // Calculate the days, hours, minutes, and seconds
        var days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
        var hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

        // Update the displayed values
        document.getElementById("days").innerHTML = days;
        document.getElementById("hours").innerHTML = hours;
        document.getElementById("minutes").innerHTML = minutes;
        document.getElementById("seconds").innerHTML = seconds;
    }

    // Call the updateCountdown function every 1 second
    var countdownInterval = setInterval(updateCountdown, 1000); // 1000 milliseconds = 1 second
</script>





