        <script>
            function createPagination(totalPages, currentPage) {
                const paginationList = document.getElementById('pagination-list');
                paginationList.innerHTML = '';


                const prevButton = createPaginationButton(currentPage - 1, 'Prev');
                paginationList.appendChild(prevButton);


                for (let i = 1; i <= totalPages; i++) {
                    const listItem = createPaginationButton(i, i);
                    if (i === currentPage) {
                        listItem.classList.add('active');
                    }
                    paginationList.appendChild(listItem);
                }


                const nextButton = createPaginationButton(currentPage + 1, 'Next');
                paginationList.appendChild(nextButton);
            }

            function createPaginationButton(pageNumber, text) {
                const listItem = document.createElement('li');
                listItem.classList.add('page-item');

                const link = document.createElement('a');
                link.href = '#';
                link.textContent = text;
                link.classList.add('page-link');
                listItem.appendChild(link);

                return listItem;
            }

            let totalPages = 5;
            const currentPage = 1;

            createPagination(totalPages, currentPage);

